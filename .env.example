# ===========================================
# CamOpsAI - Configurações de Ambiente
# ===========================================

# Banco de Dados PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/camopsai

# Provedor LLM (openai, anthropic, gemini, lmstudio)
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-vision-preview

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro-vision

# LM Studio (modelo local - não requer API key)
LMSTUDIO_API_URL=http://localhost:1234/v1
LMSTUDIO_MODEL=local-model

# WhatsApp Business API
# WHATSAPP_SEND_MODE: Modo de envio (api ou web)
# - api: Usa WhatsApp Business API (requer token e phone_id)
# - web: Usa WhatsApp Web automação (requer escaneamento de QR code)
WHATSAPP_SEND_MODE=api
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-phone-number-id
# WhatsApp Web Configuration
# WHATSAPP_SESSION_DIR: Diretório para salvar sessão do WhatsApp Web
WHATSAPP_SESSION_DIR=./sessions/whatsapp/
# WHATSAPP_HEADLESS: Executar navegador em modo headless (true/false)
WHATSAPP_HEADLESS=true

# Configurações de Processamento
# FRAME_INTERVAL_SECONDS: Intervalo global padrão (em segundos) entre capturas para novas câmeras.
# Cada câmera pode ter seu próprio intervalo específico, que sobrescreve este valor.
# Se não especificado ao criar uma câmera, este valor será usado.
FRAME_INTERVAL_SECONDS=10
FRAMES_STORAGE_PATH=./frames
MAX_QUEUE_SIZE=100

# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Logging
LOG_LEVEL=INFO

# RTSP Configuration
# RTSP_TRANSPORT: Protocolo de transporte RTSP (tcp/udp). TCP é mais confiável, UDP tem menor latência.
RTSP_TRANSPORT=tcp
# RTSP_ERROR_RECOVERY: Ativar recuperação de erros para streams RTSP (true/false)
RTSP_ERROR_RECOVERY=true
# RTSP_MAX_CONSECUTIVE_ERRORS: Número máximo de erros consecutivos antes de tentar reconexão
RTSP_MAX_CONSECUTIVE_ERRORS=10
# INITIAL_FRAMES_TO_DISCARD: Número de frames iniciais a descartar após conexão para estabilizar o stream
# Recomendado: 5-10 frames. Defina 0 para desabilitar.
INITIAL_FRAMES_TO_DISCARD=5
